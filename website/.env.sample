# SnapRegister Environment Variables
# Copy this file to .env.local and fill in your values

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/snapregister"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""

# Redis Advanced Settings (optional)
REDIS_MAX_RETRIES_PER_REQUEST="null"
REDIS_ENABLE_READY_CHECK="true"
REDIS_ENABLE_OFFLINE_QUEUE="true"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Email Service (Resend)
RESEND_API_KEY="re_your_api_key_here"
FROM_EMAIL="notifications@yourdomain.com"

# AI Services
ANTHROPIC_API_KEY="sk-ant-api03-your-key-here"
OPENAI_API_KEY="sk-your-key-here"

# Application Settings
NODE_ENV="development"
LOG_LEVEL="info"

# Optional: BullMQ Settings
BULLMQ_WORKER_CONCURRENCY="5"
BULLMQ_JOB_ATTEMPTS="3"
BULLMQ_JOB_BACKOFF_DELAY="1000"
